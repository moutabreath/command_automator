{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Commands Automator",
            "type": "debugpy",
            "request": "launch",
            "program": "src/commands_automator_initializer.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Pytest Current File",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "cwd": "${workspaceFolder}",
            "python": "${workspaceFolder}/.venv/Scripts/python.exe",
            "args": [
                "${file}",
                "-v"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Pytest All Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "cwd": "${workspaceFolder}",
            "args": [
                "tests",
                "-v"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Attach to WebView2",
            "type": "chrome",
            "request": "attach",            
            "port": 9222,
            "webRoot": "${workspaceFolder}"
        },
    ],
    "compounds": [
        {
            "name": "Full Debug (Python + JS)",
            "configurations": [
                "Commands Automator",
                "Attach to WebView2"
            ],
            "stopAll": true
        }
    ]
}